#!/usr/bin/env ruby

require 'api_mini_tester'

begin
  puts "usage: api_mini_tester [input_file.yml] [output_format]"
  exit 1
end if ARGV.empty?

output_format = ARGV[1] ? ARGV[1].to_sym : :simple

suite = ApiMiniTester::TestSuite.new(ARGV[0])
suite.run_scenarios
puts suite.print_results(output_format)
